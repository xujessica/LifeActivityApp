<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rainbow_gradient_background"
    tools:context=".MainActivity">


    <include
        android:id="@+id/actionBar"
        layout="@layout/action_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </include>

    <Button
        android:id="@+id/eatButton"
        android:layout_width="201dp"
        android:layout_height="90dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="EAT"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:onClick="onEatClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainPageSubText" />

    <Button
        android:id="@+id/entertainmentButton"
        android:layout_width="310dp"
        android:layout_height="89dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:fontFamily="@font/roboto_medium"
        android:text="ENTERTAINMENT"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:onClick="onEntertainmentClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eatButton" />

    <Button
        android:id="@+id/randomButton"
        android:layout_width="289dp"
        android:layout_height="89dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:fontFamily="@font/roboto_medium"
        android:text="RANDOM"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entertainmentButton" />
<!--        android:onClick="mainRandom"-->


    <TextView
        android:id="@+id/mainPageSubText"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="CHOOSE WHAT YOU WOULD LIKE TO DO"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainPageTitle" />

    <TextView
        android:id="@+id/mainPageTitle"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:fontFamily="@font/cinzel_bold"
        android:gravity="center"
        android:text="LIFE"
        android:textColor="@color/white"
        android:textSize="@dimen/mainTitleFontSize"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionBar" />


</androidx.constraintlayout.widget.ConstraintLayout>